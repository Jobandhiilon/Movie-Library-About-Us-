@page
@model LibraryModel
@{
    ViewData["Title"] = "Your Library";
}
<h2 style="color:white;">.</h2>
<form method="get" action="/Search" runat="server" border="0" cellpadding="0" cellspacing="0" style="width:100%;float:right">
    <div class="input-group">
        <input type="submit" value="Back" class="btn btn-primary" style="background:black" />
    </div>
</form>
<h2 style="color:white;">.</h2>

@{int i = 1;}
@{int j = 0;}
@foreach (var item in Model.display)
{
    <h1><a href='/Result?id=@item'> @i. @item</a></h1>
    <h3>Copies: @Model.displayCopies[j]</h3>
    i++;
    j++;
}
<h2 style="color:white;">.</h2>
<form method="get" action="/Remove" runat="server" border="0" cellpadding="0" cellspacing="0" style="width:100%;float:right">
    <div class="input-group">
        <input type="text" name="id" class="form-control" placeholder="Enter a movie name" />
        <input type="submit" value="Remove" class="btn btn-primary" style="background:black" />
    </div>
</form>

<h2 style="color:white;">.</h2>

<form method="get" action="/Update" runat="server" border="0" cellpadding="0" cellspacing="0" style="width:100%;float:right">
    <div class="input-group">
        <input type="text" name="id" class="form-control" placeholder="Enter a movie name" style="width:50%;"/>
        <input type="text" name="id" class="form-control" placeholder="Copies" style="width:50%;" />
        <input type="submit" value="Update" class="btn btn-primary" style="background:black" />
    </div>
</form>