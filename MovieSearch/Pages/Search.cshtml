@page
@model SearchModel
@{
}
<h2>@ViewData["Title"]</h2>
<br />

<form method="get" action="/Library" runat="server" border="0" cellpadding="0" cellspacing="0" style="width:100%;float:right">
    <div class="input-group">
        <input type="submit" value="Go to library" class="btn btn-primary" style="background:black" />
    </div>
</form>

<div id="map" style="width:100%;">
    <img src="images/cover.png" alt="cover" style="width:100%;float:left" />
</div>

<h3>Search a movie title</h3>

<form method="get" action="/Result" runat="server" border="0" cellpadding="0" cellspacing="0" style="width:100%;float:right">
    <div class="input-group">
        <input type="text" name="id" class="form-control" placeholder="Enter a movie name" />
        <input type="submit" value="Search" class="btn btn-primary" style="background:black" />
    </div>
</form>

<h2 style="color:white;">.</h2>
<h3>Add a movie to your library</h3>

<form method="get" action="/Add" runat="server" border="0" cellpadding="0" cellspacing="0" style="width:100%;float:right">
    <div class="input-group">
        <input type="text" name="id" class="form-control" placeholder="Enter a movie name" style="width:50%;" />
        <input type="text" name="id" class="form-control" placeholder="No. of copies" style="width:50%;" />
        <input type="submit" value="Add" class="btn btn-primary" style="background:black" />
    </div>
</form>

<h2 style="color:white;">.</h2>
<h3>Remove a movie</h3>

<form method="get" action="/Remove" runat="server" border="0" cellpadding="0" cellspacing="0" style="width:100%;float:right">
    <div class="input-group">
        <input type="text" name="id" class="form-control" placeholder="Enter a movie name" />
        <input type="submit" value="Remove" class="btn btn-primary" style="background:black" />
    </div>
</form>